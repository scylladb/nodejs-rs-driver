{
  "name": "scylladb-driver-alpha",
  "version": "0.2.0",
  "description": "Async CQL driver for Node.js, built on top of Rust driver, optimized for ScyllaDB!",
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Stanisław Czech",
      "email": "stanislaw.czech@scylladb.com",
      "url": "https://github.com/adespawn"
    },
    {
      "name": "Wojciech Przytuła",
      "email": "wojciech.przytula@scylladb.com",
      "url": "https://github.com/wprzytula"
    }
  ],
  "main": "main.js",
  "types": "main.d.ts",
  "napi": {
    "binary-name": "scylladb-driver-alpha",
    "targets": [
      "x86_64-unknown-linux-gnu"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scylladb/nodejs-rs-driver"
  },
  "dependencies": {
    "@types/node": ">=20",
    "long": "~5.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@napi-rs/cli": "^3.4.0",
    "ava": "^6.0.1",
    "chai": "~4.3.8",
    "eslint": "^9.15.0",
    "eslint-plugin-mocha": "^10.5.0",
    "globals": "^15.12.0",
    "mocha": "~10.8.2",
    "mocha-jenkins-reporter": "~0.4.8",
    "prettier": "~3.3.3",
    "proxyquire": "~2.1.3",
    "sinon": "~15.2.0",
    "temp": ">= 0.8.3",
    "jsdoc": "^4.0.4"
  },
  "scripts": {
    "build": "napi build --platform --release",
    "all-tests": "npm run unit && npm run integration_short && npm run integration_long",
    "unit": "./node_modules/.bin/mocha test/unit -t 5000 --recursive",
    "unit-not-supported": "./node_modules/.bin/mocha test/unit-not-supported -t 5000 --recursive",
    "examples": "node ./examples/runner.js",
    "integration": "./node_modules/.bin/mocha test/integration/supported --recursive --exit",
    "prettier": "npx prettier \"{lib,examples,test}/**/*.js\" --write",
    "full-clippy": "cargo clippy --all-targets --all-features -- -D warnings",
    "pre-push": "npm run prettier && cargo fmt && npm run full-clippy && napi build --platform && npm run eslint-fix",
    "js-doc": "jsdoc ./lib/* -c js-doc-config.js",
    "artifacts": "napi artifacts",
    "create-npm-dirs": "napi create-npm-dirs",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "universal": "napi universal",
    "version": "napi version",
    "eslint": "npx eslint \"lib/**/*.js\" \"examples/**/*.js\"",
    "eslint-fix": "npx eslint \"lib/**/*.js\" \"examples/**/*.js\" --fix"
  },
  "engines": {
    "node": ">=20"
  }
}
